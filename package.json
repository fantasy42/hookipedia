{
  "name": "hookipedia",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow bun",
    "postinstall": "fumadocs-mdx",
    "prettier:all": "prettier --write .",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "lint": "eslint --cache --report-unused-disable-directives --max-warnings=0",
    "prebuild": "bun run lint",
    "build": "next build",
    "dev": "next dev",
    "start": "next start"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write --cache"
    ],
    "*.{css}": [
      "prettier --write --cache"
    ]
  },
  "dependencies": {
    "@takumi-rs/image-response": "^0.64.0",
    "clsx": "^2.1.1",
    "fumadocs-core": "16.4.4",
    "fumadocs-mdx": "14.2.4",
    "fumadocs-ui": "16.4.4",
    "next": "^16.1.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.3",
    "eslint-plugin-unicorn": "^62.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
